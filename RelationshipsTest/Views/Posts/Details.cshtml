@{
    ViewData["Title"] = "Details";
}
@{
    var post = ViewData["Post"] as Post;
    IEnumerable<Tag> tags = ViewData["Tags"] as IEnumerable<Tag>;
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @post.Title
        </dd>
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @post.Content
        </dd>
        <dt class="col-sm-2">
            Blog
        </dt>
        <dd class="col-sm-10">
            @post.Blog.BlogId
        </dd>
        <dt class="col-sm-2">
            Tags
        </dt>
        <dd>
            @foreach (Tag tag in tags)
            {
                <p>@tag.Name</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@post.PostId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
